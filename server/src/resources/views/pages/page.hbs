<form method="POST" action="/news/blog/create">
    <div class="title">
        <label for="titleI">title</label>
        <input type="text" name="title" placeholder="nhập title" id="titleI" />
    </div>
    <div class="heading">
        <label for="headingI">heading</label>
        <input id="headingI" type="text" name="heading" placeholder="nhập heading" />
    </div>
    <div class="content">
        <label for="contentI">content</label>
        <input id="contentI" type="text" name="content" placeholder="viết nội dung" />
    </div>
    <div class="image">
        <label for="imageI"></label>
        <input type="file" name="image" id="imageI" />
    </div>
    <button type="submit">submit</button>
</form>